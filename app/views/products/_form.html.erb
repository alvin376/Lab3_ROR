<div class="row">
  <div class="col-xs-3  col-xs-offset-4">
  <%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group "> 
    <%= f.label :foto %>
    <%= f.text_field :foto, :class => "form-control", :placeholder => "Foto"%>
  </div>

  <div class="form-group">
    <%= f.label :nombre, :class => "control-label col-sm-2" %>
    <%= f.text_field :nombre, :class => "form-control", :placeholder => "nombre"%>
  </div>

  <div class="form-group">
    <%= f.label :descripcion %>
    <%= f.text_area :descripcion, :class => "form-control", :placeholder => "descripcion" %>
  </div>

  <div class="form-group">
    <%= f.label :categoria %>
    <%= f.text_field :categoria, :class => "form-control", :placeholder => "categoria" %>
  </div>

  <div class="form-group">
    <%= f.label :precio %>
    <%= f.text_field :precio, :class => "form-control", :placeholder => "precio" %>
  </div>

  <div class="form-group ">
    <%= f.label :vendido %>
    <%= f.number_field :vendido, :class => "form-control", :placeholder => "vendido" %>
  </div>

  <div class="actions col-sm-offset-2 col-sm-10">
    <%= f.submit class: 'btn btn-success'%>
  </div>
<% end %>

</div>

</div>
