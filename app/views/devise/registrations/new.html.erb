<h2  class="text-center">Registrarse</h2>
<div class="row">
  <div class="col-xs-4 col-xs-offset-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :Nombre %><br />
      <%= f.text_field :name, autofocus: true, :class => "form-control", :placeholder => "Nombre" %>
    </div>

    <div class="field">
      <%= f.label :Correo %><br />
      <%= f.email_field :email, :class => "form-control", :placeholder => "Correo" %>
    </div>

    <div class="field">
      <%= f.label :genero %><br />
      <%= f.text_field :genero, :class => "form-control", :placeholder => "Genero" %>
    </div>

    <div class="field">
      <%= f.label :Contrase単a %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres minimos)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Contrase単a" %>
    </div>

    <div class="field">
      <%= f.label :Confirmar_contrase単a %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => "contrase単a" %>
    </div>

    <div class="actions">
      <%= f.submit class: 'btn btn-success'%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

  </div>
</div>
